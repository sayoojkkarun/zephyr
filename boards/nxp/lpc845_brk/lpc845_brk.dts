/dts-v1/;
#include <nxp/nxp_lpc845.dtsi>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	model = "NXP LPC845-BRK development board";
	compatible = "nxp,lpc845-brk", "nxp,lpc845", "nxp,lpc";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	aliases {
		led0 = &led_b;
	};

	leds {
		compatible = "gpio-leds";

		led_b: led_b {
			gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
		};
		status = "okay";
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};
